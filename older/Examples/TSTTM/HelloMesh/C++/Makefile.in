include @TSTTB_ROOT@/TSTTB-Defs.inc
include @TSTTM_ROOT@/TSTTM-Defs.inc

INCLUDES = $(TSTTB_CLIENT_CXX_INCLUDES) $(TSTTM_CLIENT_CXX_INCLUDES) \
	$(SIDL_INCLUDES)
LIBS = $(TSTTM_LIB_DIR) $(TSTTB_LIB_DIR)  $(TSTTM_ALL_CXX_LIBS) $(TSTTM_BACKEND_LIBS) $(TSTTB_ALL_CXX_LIBS) $(SIDL_LIBS)

CPP_OBJS = hello_mesh.o

all: hello_mesh

hello_mesh: $(CPP_OBJS)
	@CXX@ $(CPP_OBJS) -o $@ $(LIBS)

clean:
	rm -rf *.o *~

distclean:
	rm -rf *.o *~ hello_mesh Makefile

.cc.o:
	echo Compiling *.cc
	@CXX@ $(INCLUDES) -c $<
