include @TSTTB_ROOT@/TSTTB-Defs.inc
include @TSTTM_ROOT@/TSTTM-Defs.inc

INCLUDES = $(TSTTB_CLIENT_C_INCLUDES) $(TSTTM_CLIENT_C_INCLUDES) \
	$(SIDL_INCLUDES)
LIBS = $(TSTTM_LIB_DIR) $(TSTTB_LIB_DIR)  $(TSTTM_ALL_C_LIBS) $(TSTTM_BACKEND_LIBS) $(TSTTB_ALL_C_LIBS) $(SIDL_LIBS)

C_OBJS = hello_mesh.o

all: hello_mesh

hello_mesh: $(C_OBJS)
	@CC@ $(C_OBJS) -o $@ $(LIBS)

clean:
	rm -rf *.o *~

distclean:
	rm -rf *.o *~ hello_mesh Makefile

.c.o:
	echo Compiling *.c
	@CC@ $(INCLUDES) -c $<
